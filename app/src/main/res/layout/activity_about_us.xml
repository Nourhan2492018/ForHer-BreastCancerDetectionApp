<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutUS">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_about"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:fontFamily="cursive"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:textColor="#617C79"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_faceboo"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook2" />

                <ImageView
                    android:id="@+id/img_youtube"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/youtube2" />

                <ImageView
                    android:id="@+id/img_linkedin"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linkedin2" />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:backgroundTint="@color/pink"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="FOR HERE APP"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="113dp"
                android:layout_marginTop="35dp"
                android:paddingLeft="5dp"
                android:text="is an application which helps women to detect whether the tumor is benign or malignant and also which stage and that through mammography images that are inserted by the use"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/pink"
            android:orientation="vertical"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="OUR MISSION"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="lately We have observed that there is a great pressure on doctors so we developed this application to facilitate diagnose process hopping to decrease that pressure . Also there is a great lack of awareness about this disease so we added to this application an option for woman to test if she has disease or not
"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:backgroundTint="@color/pink"
            android:orientation="vertical"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="WHY BREAST CANCER"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_marginTop="35dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="Breast cancer is the second-leading cause of cancer deaths among women that according to the worldHealthOrganization, number of the cancer cases expected in 2025 will be 19.3 million cases "
                android:paddingLeft="5dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="BREAST CANCER STAGES"
            android:paddingLeft="5dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#F7F7F7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="benign Stage one "
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:background="@color/white"
                        android:src="@drawable/beginn1"
                        android:layout_height="130dp"
                        android:layout_width="150dp"
                        android:layout_margin="25dp"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="benign Stage Two"
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:background="@color/white"
                        android:layout_height="130dp"
                        android:src="@drawable/beginn2"
                        android:layout_width="150dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="25dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#F7F7F7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="benign Stage Three"
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton

                        android:background="@color/white"
                        android:layout_height="130dp"
                        android:src="@drawable/beginn3"
                        android:layout_width="150dp"
                        android:scaleType="fitXY"
                        android:layout_margin="25dp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F7F7F7"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Malignant Stage One"
                            android:textAlignment="center"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_margin="25dp"
                            android:backgroundTint="#F7F7F7"
                            android:scaleType="centerCrop"
                            android:src="@drawable/malignn1" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#F7F7F7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Malignant Stage Two"
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:background="@color/white"
                        android:layout_height="130dp"
                        android:src="@drawable/malignn2"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_margin="25dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#F7F7F7"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Malignant Stage three"

                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:background="@color/white"
                        android:layout_height="130dp"
                        android:src="@drawable/malignn3"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_margin="25dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#F7F7F7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Malignant Stage Four"

                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:background="@color/white"
                        android:layout_height="130dp"
                        android:src="@drawable/malignnt4"
                        android:layout_width="150dp"
                        android:scaleType="centerCrop"
                        android:layout_margin="25dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>